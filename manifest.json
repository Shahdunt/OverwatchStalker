{
  "manifest_version": 2,

  "name": "Overwatch Stalker",
  "description": "Context menu option to find players battletag.",
  "version": "0.0.1",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
          "contextMenus"
        ]
}